{
  "compilerOptions": {
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2020",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": [
    "./src",
    ".scratch"
  ]
}
